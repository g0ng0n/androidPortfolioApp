<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:showIn="@layout/activity_main"
    tools:context=".MainActivityFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="My Nanodegree Apps!"
        android:id="@+id/tittle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spotify Streamer"
        android:id="@+id/spotifyButton"
        android:background="#F08C35"
        android:textColor="#ffffff"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/tittle"
        android:layout_alignStart="@+id/tittle"
        android:layout_alignEnd="@+id/tittle"
        android:onClick="getToastMessage"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scores App"
        android:id="@+id/scoresButton"
        android:background="#F08C35"
        android:textColor="#ffffff"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/spotifyButton"
        android:layout_alignStart="@+id/spotifyButton"
        android:layout_alignEnd="@+id/spotifyButton"
        android:clickable="false"
        android:singleLine="false"
        android:onClick="getToastMessage"/>
    />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Library App"
        android:id="@+id/libratyButton"
        android:textColor="#ffffff"
        android:background="#F08C35"
        android:layout_below="@+id/scoresButton"
        android:layout_marginTop="15dp"
        android:layout_alignStart="@+id/scoresButton"
        android:layout_alignEnd="@+id/scoresButton"
        android:onClick="getToastMessage"/>
    />
    />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Build It Bigger"
        android:id="@+id/buildItButton"
        android:background="#F08C35"
        android:textColor="#ffffff"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/libratyButton"
        android:layout_alignStart="@+id/libratyButton"
        android:layout_alignEnd="@+id/libratyButton"
        android:onClick="getToastMessage"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bacon Reader"
        android:id="@+id/baconButton"
        android:textColor="#ffffff"
        android:background="#F08C35"
        android:layout_below="@+id/buildItButton"
        android:layout_alignStart="@+id/buildItButton"
        android:layout_marginTop="15dp"
        android:layout_alignEnd="@+id/buildItButton"
        android:onClick="getToastMessage"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capstone: My Own app"
        android:id="@+id/capstoneButton"
        android:background="#e80206"
        android:textColor="#ffffff"
        android:layout_below="@+id/baconButton"
        android:layout_marginTop="15dp"
        android:layout_alignStart="@+id/baconButton"
        android:layout_alignEnd="@+id/baconButton"
        android:onClick="getToastMessage"/>


</RelativeLayout>
